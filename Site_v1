  <script>
    // Jahreszahl automatisch setzen
    document.getElementById('y').textContent = new Date().getFullYear();

    // Wireframe‚ÄëToggle
    const wfBtn = document.getElementById('wf');
    if (wfBtn) wfBtn.addEventListener('click', () => document.body.classList.toggle('wireframe'));

    // Einfache Hash‚ÄëNavigation (#home, #ueber, #themen, #projekte, #material, #impressum, #feedback)
    const routes = Array.from(document.querySelectorAll('.route'));
    function show(route){
      routes.forEach(s => s.hidden = true);
      const el = document.querySelector(route) || document.querySelector('#home');
      el.hidden = false;
      window.scrollTo({top:0, behavior:'smooth'});
    }
    window.addEventListener('hashchange', () => show(location.hash));
    show(location.hash || '#home');

    // Themen‚ÄëSubtabs: nur Platzhalter
    const subtabs = document.querySelectorAll('.subtab');
    const content = document.getElementById('themen-content');
    subtabs.forEach(btn => btn.addEventListener('click', () => {
      subtabs.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      const key = btn.dataset.tab;
      if(content) content.querySelector('p').textContent = {
        zugehoerigen: 'Info zu Zugeh√∂rigen ‚Äì kurzer erkl√§render Einleitungstext.',
        ausgeschlossenen: 'Info zu Ausgeschlossenen ‚Äì kurzer erkl√§render Einleitungstext.',
        widerstand: 'Info zu Widerstand ‚Äì kurzer erkl√§render Einleitungstext.'
      }[key] || 'Kurzer einleitender Text zur gew√§hlten Kategorie.';
    }));

    // Filter (Material): einfache UND-Logik √ºber aktive Filterbuttons
    const matGrid = document.getElementById('mat-grid');
    const matFilters = document.querySelectorAll('.mat-filter');
    const active = {};
    matFilters.forEach(btn => btn.addEventListener('click', () => {
      const k = btn.dataset.key, v = btn.dataset.val;
      // toggle: gleiche Kategorie exklusiv ausw√§hlen
      document.querySelectorAll(`.mat-filter[data-key="${k}"]`).forEach(b => b.classList.remove('active'));
      if(active[k] === v){ delete active[k]; } else { active[k] = v; btn.classList.add('active'); }
      if(!matGrid) return;
      matGrid.querySelectorAll('.tile').forEach(item => {
        const ok = Object.entries(active).every(([kk,vv]) => item.dataset[kk] === vv);
        item.style.display = ok || Object.keys(active).length===0 ? '' : 'none';
      });
    }));
  </script>
